        <script>
          var swiperThumbs = new Swiper(".thumbsSwiper", {
            spaceBetween: 10,
            slidesPerView: 5,
            freeMode: true,
            watchSlidesProgress: true,
            direction: "vertical",
          });
        
          var swiperMain = new Swiper(".mainSwiper", {
            spaceBetween: 10,
            navigation: {
              nextEl: ".swiper-button-next",
              prevEl: ".swiper-button-prev",
            },
            thumbs: {
              swiper: swiperThumbs,
            },
          });
